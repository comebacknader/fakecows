<%= render 'pages/mainbar' %>

<div class="container">

	<div class="new_product_box">

	<%= form_for @juicer, :html => { :multipart => true }  do |f| %>

		<%= f.label :brand %>
		<%= f.text_field :brand %>

		<%= f.label :title %>
		<%= f.text_field :title %>

		<%= f.label :machine %>
		<%= f.text_field :machine %>		

		<%= f.label :price %>
		<%= f.text_field :price %>	

		<%= f.label :description %>
		<%= f.text_area :description %>		

		<%= f.label :link %>
		<%= f.text_field :link %>		

		<%= f.label :store %>
		<%= f.text_field :store %>		

  		<%= f.file_field :photo %>	

		<%= f.submit %>

	<% end %>

	</div>

</div>